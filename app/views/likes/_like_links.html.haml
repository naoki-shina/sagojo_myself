- if current_user.likes.find_by(article_id: article.id)
  = link_to unlike_path(article.id), method: :delete, remote: true do
    = image_tag 'img_star_on', class: 'btn like-btn', id: "star-#{article.id}"
- else
  = link_to like_path(article.id), method: :post, remote: true do
    = image_tag 'img_star_off', class: 'btn unlike-btn', id: "star-#{article.id}"
