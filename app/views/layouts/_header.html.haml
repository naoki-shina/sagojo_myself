.header#header-01
  .header-inner
    .header-logo
      = link_to root_path do
        %img.header-logo__img{src: "https://d1te0bovbq6epg.cloudfront.net/common/img/logo.svg", alt: "SAGOJO"}
        %p.header-logo__string すごい旅人求人サイト - サゴジョー
    %nav.header-globalnav-01
      %ul.header-list
        %li.header-list__item
          = link_to 'ホーム', root_path
        %li.header-list__item
          = link_to 'シゴト', home_job_path
        %li.header-list__item
          = link_to 'すごい旅研究所', home_triplab_path
        %li.header-list__item
          = link_to 'はじめての方はこちら', home_newcomer_path
        %li.header-list__item 企業の方はこちら
        %li.header-list__item
          = link_to 'FAQ', home_FAQ_path
    - if user_signed_in?
      .header-utility-02
        .header-utility-02__item.circle-bell
          .header-utility-02__.fa.fa-bell
        .header-utility-02__item.circle-comment
          .header-utility-02__.fa.fa-comment
        .user_menu_btn
          .header-utility-02__item.profile-image
            - if profile.avatar.blank?
              = image_tag 'icon-tabibito-01.svg'
            - else
              = image_tag profile.avatar, class: 'profile-image_cover'
          .header-utility-02__string.profile-name
            = current_user.name
          .header-utility-02.fa.fa-caret-down
          %ul.header-utility-02__list
            %li
              = link_to '応募したシゴト一覧', root_path, class: 'menu'
            %li
              = link_to 'お気に入り一覧',  user_like_path(current_user.id), class: 'menu'
            %li
              = link_to 'プロフィール編集', edit_user_path(current_user.id), class: 'menu'
            %li
              = link_to 'アカウント設定', edit_user_registration_path, class: 'menu'
            %li.last-list
              = link_to 'ログアウト', destroy_user_session_path, method: :delete, class: 'sign_out'
    - else
      .header-utility-01
        %ul.header-utility-list-01
          %li.sign-in= link_to "ログイン", new_user_session_path, class: "sign-in__btn"
          %li.sign-up= link_to "旅人登録", new_user_registration_path, class: "sign-up__btn"
  / 仮置き
  %p.notice= notice
  %p.alert= alert

