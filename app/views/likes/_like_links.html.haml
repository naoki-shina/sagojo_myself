.like-link{id: "like-link-#{article.id}"}
  - if current_user.likes.find_by(article_id: article.id)
    = link_to unlike_path(article.id), method: :delete, remote: true do
      = image_tag('img_star_off', class: 'like-btn'){id: "heart-#{article.id}"}
        = article.likes.count.to_s
  - else
    = link_to like_path(article.id), method: :post, remote: true do
      = image_tag('img_star_on', class: 'like-btn'){id: "heart-#{article.id}"}
        = article.likes.count.to_s
